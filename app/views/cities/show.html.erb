<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @city.name %>
</p>



<h3>Neighbours</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Distance</th>
    </tr>
  </thead>

  <% City.each do |city| %>
    <% unless city.id == @city.id %>
      <tbody>
        <tr>
          <td><%= city.name %></td>
          <td><%= @city.distance_to(city) %></td>
        </tr>
      </tbody>
    <% end %>


  <% end %>
</table>

<%= link_to 'Edit', edit_city_path(@city) %> |
<%= link_to 'Back', cities_path %>
